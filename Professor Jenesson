    let currentQuestionIndex = 0;
    let correctAnswers = 0;
    let incorrectAnswers = 0;

    // Inicia a música de fundo
    const backgroundMusic = document.getElementById('background-music');
    // Ensure the music starts only after user interaction or if it's muted
    backgroundMusic.volume = 0.2; // Define o volume da música de fundo
    backgroundMusic.muted = true; // Mute initially to allow autoplay
    document.addEventListener('click', () => {
        if (backgroundMusic.muted) {
            backgroundMusic.muted = false; // Unmute on first click
            backgroundMusic.play();
        }
    }, { once: true }); // Run this listener only once

    function loadQuestion() {
        const questionContainer = document.getElementById('quiz');
        if (currentQuestionIndex < questions.length) {
            questionContainer.innerHTML = `
                <div class="question">${questions[currentQuestionIndex].question}</div>
                <ul class="options">
                    ${questions[currentQuestionIndex].options.map(option => `<li><label><input type="radio" name="option" value="${option}"> ${option}</label></li>`).join('')}
                </ul>
                <img src="https://d41chssnpqdne.cloudfront.net/user_upload_by_module/chat_bot/files/137618553/UOzw3SRAqth4L2FY.png?Expires=1749420661&Signature=nKlhvsi96vjyIsSahFtLjvZgHb6sYonjMeqA6RIim4irvSxqrAk9cW0OPkStrRKHWJZfYhImUgTmjL2EmMYRvH7w~uOUTqqBO5XVTnv0c-ZD2dSjEeKDE8RRvsT2znxfbrkJtceXyCn9xHWH-uA7qwFsyF4Z7FVDMR4ibVwOwJtyrOjkieWUeU1h-VI6m2p3o0iugTbMV~kMXOaX2W~KhEG0hPJLQ10BpMTW01DnPPXwy2oXAIXxgYDOZJ3qfTIYLqmceNBtOBJ3HcjHU8dQrPdFjUFKNbcOsFSEKEI8-IRKhwzJsrwecuc2KL8QMNSO0n7g3M2JFg-ujHiHEbaUeBA__&Key-Pair-Id=K3USGZIKWMDCSX" alt="Logo" class="logo">
            `;
            document.getElementById('next-button').style.display = 'block'; // Ensure button is visible for next question
        } else {
            showResults();
        }
    }

    document.getElementById('next-button').addEventListener('click', () => {
        const selectedOption = document.querySelector('input[name="option"]:checked');
        if (selectedOption) {
            const answer = selectedOption.value;
            if (answer === questions[currentQuestionIndex].answer) {
                correctAnswers++;
                alert('Correto!');
            } else {
                incorrectAnswers++;
                document.getElementById('error-sound').play(); // Toca o som de erro
                alert('Incorreto! A resposta correta é: ' + questions[currentQuestionIndex].answer);
            }
            currentQuestionIndex++;
            loadQuestion(); // Load next question or show results
        } else {
            alert('Por favor, selecione uma opção.');
        }
    });

    function showResults() {
        const totalQuestions = questions.length;
        const percentageCorrect = (correctAnswers / totalQuestions) * 100;
        const percentageIncorrect = (incorrectAnswers / totalQuestions) * 100;

        const resultContainer = document.getElementById('quiz-container');
        document.getElementById('next-button').style.display = 'none'; // Hide next button

        let gabaritoHtml = questions.map((q, index) => `
            <div class="gabarito-item">
                <strong>${index + 1}ª Questão:</strong> ${q.question}<br>
                <strong>Resposta Correta:</strong> ${q.answer}<br>
                <span>${q.explanation}</span>
            </div>
        `).join('');

        resultContainer.innerHTML = `
            <h2>Quiz Concluído!</h2>
            <p>Acertos: ${correctAnswers} (${percentageCorrect.toFixed(2)}%)</p>
            <p>Erros: ${incorrectAnswers} (${percentageIncorrect.toFixed(2)}%)</p>
            <p>${getImprovementSuggestion(percentageCorrect)}</p>
            <h3>Gabarito Completo:</h3>
            <div class="gabarito-list">
                ${gabaritoHtml}
            </div>
            <img src="https://d41chssnpqdne.cloudfront.net/user_upload_by_module/chat_bot/files/137618553/UOzw3SRAqth4L2FY.png?Expires=1749420661&Signature=nKlhvsi96vjyIsSahFtLjvZgHb6sYonjMeqA6RIim4irvSxqrAk9cW0OPkStrRKHWJZfYhImUgTmjL2EmMYRvH7w~uOUTqqBO5XVTnv0c-ZD2dSjEeKDE8RRvsT2znxfbrkJtceXyCn9xHWH-uA7qwFsyF4Z7FVDMR4ibVwOwJtyrOjkieWUeU1h-VI6m2p3o0iugTbMV~kMXOaX2W~KhEG0hPJLQ10BpMTW01DnPPXwy2oXAIXxgYDOZJ3qfTIYLqmceNBtOBJ3HcjHU8dQrPdFjUFKNbcOsFSEKEI8-IRKhwzJsrwecuc2KL8QMNSO0n7g3M2JFg-ujHiHEbaUeBA__&Key-Pair-Id=K3USGZIKWMDCSX" alt="Logo" class="logo">
        `;
    }

    function getImprovementSuggestion(percentageCorrect) {
        if (percentageCorrect === 100) {
            return "Parabéns! Excelente desempenho em Informática Geral!";
        } else if (percentageCorrect >= 70) {
            return "Muito bom! Continue revisando os tópicos para aprimorar ainda mais.";
        } else if (percentageCorrect >= 40) {
            return "Bom trabalho! Você pode melhorar revisando os conceitos de Informática Geral.";
        } else {
            return "Continue estudando! Dedique mais tempo aos conceitos de Informática Geral.";
        }
    }

    loadQuestion();
</script>
